<h3>DIRECCION DE ENTREGA</h3>
<form method="post" action="./confirmar">
    <input type="text" name="calle" placeholder="Calle" required>
    <input type="number" name="altura" placeholder="Altura" required>
    <input type="float" name="total" value="{{total}}" hidden>

    {{#if flag}}
    <button class="btn btn-success" type="submit">Confirmar compra</button>
    {{else}}
    <button class="btn btn-success" disabled>Confirmar compra</button>
    {{/if}}
</form>

<a class="btn btn-primary" href="../home">Volver</a>