<link rel="stylesheet" href="/public/styles/floating_card.css" />

<div id="container">
    <form id="floating_card" action="./crearpartido/{{id}}" method="post">
        <div id="title_container">
            <h2 id="title">Nuevo Partido</h2>
        </div>
        <input
            class="textbox"
            type="text"
            name="nombrePartido"
            placeholder="Nombre del partido"
            minlength="3"
            pattern="[A-Za-z0-9\\\\\\\\\\\\\\\\\s]+"
            title="Solo letras, números y espacios. Tamaño mínimo: 3. Tamaño máximo: 20"
            autofocus
        />
        <input
            type="text"
            name="direccion"
            placeholder="Dirección del partido"
            class="textbox"
            minlength="3"
            maxlength="20"
            pattern="[A-Za-z0-9\\\\\\\\\\\\\\\\\s]+"
        />
        <select 
           
            name="selectedSport"
            class="textbox"
           
        />
        <option value="" selected hidden disabled>Selecciona un deporte</option>
        {{#each sports}}
            <option value={{id}}>{{nombre}}</option>
        {{/each}}
        </form>
        <input
            class="textbox"
            type="datetime-local"
            name="fechaHasta"
            placeholder="Fecha y hora fin"
        />
        <input
            class="textbox"
            type="number"
            name="jugadoresFaltantes"
            placeholder="Jugadores faltantes"
        />
        <input id="submit_btn" type="submit" value="Crear partido" />
        <div id="bottom_container">
            <a href="../user/home">Volver</a>
        </div>

    </form>
</div>