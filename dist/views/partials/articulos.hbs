<h1>Sitio en construcción</h1>
<h2>ABM</h2>
<html lang="en">
    <style>
body {
  /*background-image: url('https://vivo247.com/wp-content/uploads/2020/08/futbol5-25082020.jpg');*/
    background-repeat: no-repeat;
  background-attachment: fixed;
  background-size: cover;
}
</style>
{{#if confirmacion}}
<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                {{confirmacion}}
                <button type="button" class="close" data-dismiss='alert' aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        </div>
    </div>
</div>
{{/if}}

<table border="1">
 <theader>      
        <th>Articulo</th>
        <th>Descripcion</th>
        <th>Cantidad</th>
        <th>Precio</th>
        <th>Acción</th>
    </theader>
    {{#each articulos}}
    <tr>
        <form action="./comprar" method="post">
        <td><input type="text" name="id" value="{{id}}" readonly></td>
                <td><input type="text" name="nombre" value="{{nombre}}" readonly ></td>
                <td><input type="text" name="precio" value="{{precio}}" readonly ></td> >
                <td><input type="number" name="cantidad" value="1"></td>
                <td><button class="btn btn-success" type="submit">Agregar al carrito</button></td>
        </form>
    </tr>
    {{else}}
    <tr>
        <td colspan="4">No hay mas filas</td>
    </tr>
    {{/each}}
</table>

<br>
<a class="btn btn-success" href="../compra/listar">Ver Carrito</a>