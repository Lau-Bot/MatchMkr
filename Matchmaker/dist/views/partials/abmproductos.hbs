<table border="1">
    <theader>
        <th>Articulo</th>
        <th>Descripcion</th>
        <th>Precio</th>
        <th>Editar</th>
        <th>Eliminar</th>
    </theader>
    {{#each articulos}}
    <tr>
        <form action="./modificar/{{id}}" method="post">
            <td><input type="text" name="id" value="{{id}}" readonly></td>
            <td><input type="text" name="nombre" value="{{nombre}}"></td>
            <td><input type="text" name="precio" value="{{precio}}"></td>
            <td><button class="btn btn-info" type="submit">Modificar</button></td>
            <td><a class="btn btn-danger" href="/admin/delete/{{id}}">Eliminar</a></td>
        </form>
    </tr>
    {{else}}
    <tr>
        <td colspan="4">No hay mas filas</td>
    </tr>
    {{/each}}
</table>

