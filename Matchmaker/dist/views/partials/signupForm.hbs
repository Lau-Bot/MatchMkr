<head>
     <style>
 input:valid,
textarea:valid {
    background: rgb(106, 255, 106);
}

input:invalid,
textarea:invalid {
    background: rgb(255, 96, 96);
}   
</style>
</head>
<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3>Registrarse</h3>
                </div>
                <div class="card-body"></div>
                
                <form action="../user/signup" method="post">
                    <div class="form-group">
                        <input
                            type="text"
                            name="usuario"
                            placeholder="Por ejemplo, Juan"
                            class="form-control"
                            minlength="3"
                            maxlength="40" required
                            required pattern="[A-Za-z0-9]+"
                            title="Letras y números. Tamaño mínimo: 3. Tamaño máximo: 40"
                            autofocus
                        />
                        <input
                            type="email"
                            name="email"
                            placeholder="tu@correo.com"
                            class="form-control"
                        />
                        <input
                            type="password"
                            name="password"
                            placeholder="Contraseña"
                            class="form-control"
                            minlength="3" required
                        />
                        <input
                            type="password"
                            name="repassword"
                            placeholder="Repetir Contraseña"
                            class="form-control"
                            minlength="3" required
                        />
                        <button
                            class="btn btn-success btn-block"
                        >Enviar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>