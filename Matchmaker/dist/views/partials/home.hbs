<h2>Pantalla de usuario</h2>

<html lang="es">
    <style>
       input:valid,
textarea:valid {
    background: rgb(106, 255, 106);
}

input:invalid,
textarea:invalid {
    background: rgb(255, 96, 96);
}   
body {
  background-image: url('https://vivo247.com/wp-content/uploads/2020/08/futbol5-25082020.jpg');
    background-repeat: no-repeat;
  background-attachment: fixed;
  background-size: cover;
}
</style>

<table border="1" margin="10%" background-color="#FFFFFF">
    <div class="col-15">
        <div class="table-responsive">
            <table class="table table-bordered table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Partido</th>
                        <th scope="col">Hora fin</th>
                        <th scope="col">Direccion</th>
                        <th scope="col">Jugadores faltantes</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each partidos}}
                    <tr>
                        <th>{{nombrePartido}}</th>
                        <th>{{fechaHasta}}</th>
                        <th>{{direccion}}</th>
                        <th>{{jugadoresFaltantes}}</th>
                    </tr>
                    {{else}}
                    <tr>
                        <td colspan="5">No hay partidos</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</table>

<div style="text-align: center;">
    <a class="btn btn-success btn-lg" href="/user/crearpartido" >Crear partido</a><br>
</div>

