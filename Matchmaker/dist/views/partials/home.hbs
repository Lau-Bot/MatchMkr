

<html lang="es">
    <link rel="stylesheet" href="/public/styles/cards.css">
    <style>
        

       input:valid,
textarea:valid {
    background: rgb(106, 255, 106);
}

input:invalid,
textarea:invalid {
    background: rgb(255, 96, 96);
}   
body {
  /*background-image: url('https://vivo247.com/wp-content/uploads/2020/08/futbol5-25082020.jpg');*/
    background-repeat: no-repeat;
  background-attachment: fixed;
  background-size: cover;
}
</style>

<div class="cards_container">
     {{#each partidos}}
            <form class="card" method="GET" action="/user/matchinfo/{{id}}">
                <div>
                    <span class="text_match_address"
                        >{{direccion}}</span
                    >
                </div>
                <div class="card_mid">
                    <img
                        class="image_match"
                        src="../../public/images/sports/{{sportInfo.nombre}}.jpg"
                        alt=""
                    />
                    <span class="text_match_name">{{nombrePartido}}</span>
                    <div class="inner_info_match">
                        <span class="text_owner_name">Propietario del Partido: {{ownerInfo.usuario}}</span>
                        
                        <span class="text_match_date">{{fechaHasta}}</span>
                        <span class="text_match_date">Deporte: {{sportInfo.nombre}}</span>
                        <span class="text_match_time">Jugadores Faltantes: {{jugadoresFaltantes}}</span>
                    </div>
                </div>
                <div>
                    <input class="btn_join" type="submit" value="VER" />
                </div>
            </form>
            {{/each}}
        </div>


