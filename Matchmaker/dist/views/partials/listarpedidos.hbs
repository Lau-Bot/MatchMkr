listolospedidos
{{#if confirmacion}}
<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                {{confirmacion}}
                <button type="button" class="close" data-dismiss='alert' aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        </div>
    </div>
</div>
{{/if}}

<table border="1">
    <theader>
        <th>Articulo</th>
        <th>Fecha</th>
        <th>Calle</th>
        <th>Altura</th>
        <th>Total</th>
    </theader>

    {{#each pedidos}}
    <tr>
        <form action="./comprar" method="post">
            <td><input type="text" name="id" value="{{id}}" readonly></td>
            <td><input type="text" name="fecha" value="{{fecha}}" readonly></td>
            <td><input type="text" name="calle" value="{{calle}}" readonly></td>
            <td><input type="text" name="altura" value="{{altura}}" readonly></td>
            <td><input type="text" name="precio" value="{{total}}" readonly></td>
        </form>
    </tr>
    {{else}}
    <tr>
        <td colspan="4">No hay mas filas</td>
    </tr>
    {{/each}}
</table>
<br>
<a class="btn btn-info" href="../admin/home">Volver</a>